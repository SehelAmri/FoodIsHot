<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/effects_greymode"
    android:orientation="vertical"
    android:layout_marginVertical="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/home_rest_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/searchBarBorder"
            />
                    <TextView
                        android:id="@+id/closed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="CLOSED"
                        android:textColor="@android:color/white"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/delivery_time"
                        android:layout_width="wrap_content"
                        android:layout_margin="15sp"
                       android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom | right"
                        android:textAlignment="center"
                        android:background="@drawable/radius_3"
                        android:text="20 - 30 mins"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlCompat" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/name_restView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:text="BLANK"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rating_restView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_star_black_24dp"
                    android:drawablePadding="2dp"
                    android:text="5.0"
                    android:gravity="fill"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/ratingNo_restView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:gravity="fill"
                    android:text="(1 ratings)"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textAlignment="center"
                    android:text="·"/>
                <TextView
                    android:id="@+id/type_restView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:gravity="fill"
                    android:text="No Type"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textAlignment="center"
                    android:text="·"/>
                <TextView
                    android:id="@+id/subtype_restView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:gravity="fill"
                    android:text="No Sub"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textAlignment="center"
                    android:text="·"/>
                <TextView
                    android:id="@+id/price_restView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:gravity="fill"
                    android:textSize="13dp"
                    android:text="$"/>
        </LinearLayout>
        </LinearLayout>
